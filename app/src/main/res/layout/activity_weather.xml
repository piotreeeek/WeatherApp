<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piotrek.weatherapp.WeatherActivity">

    <TextView
        android:id="@+id/city_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/city_temp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/city_name" />

    <TextView
        android:id="@+id/city_weather"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/city_temp" />

    <TextView
        android:id="@+id/city_humidity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/city_weather" />

    <TextView
        android:id="@+id/city_pressure"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/city_humidity" />

    <TextView
        android:id="@+id/city_wind"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/city_pressure" />

</RelativeLayout>
